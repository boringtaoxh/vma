#infoTopBar
  font-family  'PT Sans'
  height 100px
  width 100%
  position relative
  background-color rgb(243, 243, 243)
  box-shadow 1px 2px 2px 0px rgba(39, 34, 26, 0.2)
  padding 65px 40px 0 40px
  box-sizing border-box
  ul
    li
      font-size 18px
      color #000
      display inline-block
      font-weight 700
      margin-right 10px
      line-height 1
      &:first-child
        padding-left 0
      a
        color  #929292
        font-size 16px
        font-weight 100
        padding 0 15px
        padding-bottom 2px
        &:hover
          color black
          text-decoration none
        &.active
          color black
  .chat-text
    color #929292
    margin-top 22px
    font-size 16px
    font-weight 100
    padding-right 30px
    b
      color black
      margin-left 10px
  .chat_btn 
    margin-top 20px
    margin-right 30px
    text-align left
    font-size  11px
    padding  6px
    padding-left 10px
    padding-right 40px
    border-radius  2px
    background  #e2e2e2 url('/assets/images/speechbubble.png') 88% 6px no-repeat
    font-weight  600
    border 0
    &:hover
      color #fff
      background #3c3c3c url(/assets/images/speechbubble_hover.png) 88% 6px no-repeat
      transition all 0.3s ease-in-out 0s