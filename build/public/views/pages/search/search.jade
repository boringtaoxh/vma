#search(ng-controller='searchCtrl')
  .title
    | Please type here to search a lovely thing...
  input(type='text' ng-model='query' autofocus)
  .results
    - var searchSections = [{value: "brand", text: "Brands"}, {value: "name", text: "Products"}, {value: "-lovesCount", text: "Loved"}, {value: "price", text: "Price"}]
      each val in searchSections
        .section.col-xs-12(ng-if='filtered.length > 0 && query.length >= 1')
          .header.col-xs-6
            h2 #{val.text}
          .col-xs-6.text-right
            h4.more
              a(ng-href="/search/#{val.value}?target={{query}}" target='_self') More
        .section-results
          ul
            li.col-xs-2(search-results ng-repeat='product in filtered = ( products | filter: query ) | limitTo: 6 | orderBy: "#{val.value}"' ng-show="query.length >= 1")
        .clearfix
  .no-result(ng-if='filtered.length == 0 && query.length >= 1')
    h2 No result found :(
    p Your Search did not return any results, please try again!
  footer
    include ../../navs/nav-bottom
