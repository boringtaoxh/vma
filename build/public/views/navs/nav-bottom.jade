#nav-bottom
  .menu
    .menu-block.col-xs-4
      span.explore
        a(ng-href='/explore/man&woman/all') Explore
      span.search
        a(ng-href='/search') Search
    .menu-block.col-xs-4.text-center(ng-controller='authCtrl')
      span.login(ng-hide='currentUser')
        a(ng-href="/signup") Log in / Join
      span.user(ng-show='currentUser') 
        a(href='/user/{{currentUser.$id}}/love/loves') {{currentUser.firstname}} {{currentUser.lastname}}
      span.logout(ng-show='currentUser')
        a(ng-href="/logout" ng-click="logout()") Log out
    .menu-block.col-xs-4.text-right
      span.follow
        a(href="" ng-model='showFollow' ng-init='showFollow=false' ng-click='showFollow=true') Follow
      span.info
        a(ng-href='/info/about') Info
      span.language
        a.chinese(ng-href='http://cn.a-lovely-thing.com') 中文
#follow(ng-show="showFollow")
  img.close.img-responsive(ng-click='showFollow=false' src='/assets/img/ui/follow_cross.png')
  .wrapper
    .row
      h4 FOLLOW US ON
    .row
      .col-xs-6.text-center
        a(href="https://twitter.com/alovelything" target="_blank" style="display:inline-block;").text-center
          img#twitter.social_icon.img-responsive(src='/assets/img/ui/twitter.png')
      .col-xs-6.text-center
        a(href="https://www.facebook.com/a.lovely.thing" target="_blank" style="display:inline-block;").text-center
          img#facebook.social_icon.img-responsive(src='/assets/img/ui/facebook.png')
    .row      
      .col-xs-6.text-center
        a(href="http://www.weibo.com/u/3076262942" target="_blank" style="display:inline-block;").text-center
          img#weibo.social_icon.img-responsive(src='/assets/img/ui/sina-weibo.png')
      .col-xs-6.text-center
        a(href="https://instagram.com/alt.alovelything" target="_blank" style="display:inline-block;").text-center
          img#instagram.social_icon.img-responsive(src='/assets/img/ui/instagram.png')