#gender.row.col-xs-12
  form
    .col-xs-6
      a(href='/explore/man/all')
        label.filter-button.gender(ng-class="{true: 'active'}[ifGender('man')]") Men
    .col-xs-6
      a(href='/explore/woman/all')
        label.filter-button.gender(ng-class="{true: 'active'}[ifGender('woman')]") Women
#category.row.col-xs-12
  form
    - var filterCategoryOptions = [{value: "Shoes", text: "shoes"}, {value: "Accessories", text: "accessories"}, {value: "Bags", text: "bags"}, {value: "Jewellery", text: "jewellery"}, {value: "Apparel", text: "apparel"}, {value: "Lifestyle", text: "lifestyle"}]
        each val in filterCategoryOptions
          .col-xs-6(ng-show="ifCategoryAvailable('#{val.value}')")
            a(href='/explore/{{gender}}/#{val.text}')
              label.filter-button.category(ng-class="{true: 'active'}[ifCategory('#{val.text}')]")
                | #{val.value}
#colour.row.col-xs-12
  form
    - var filterColourOptions = [{value: "Black", text: "#000"}, {value: "White", text: "#fff"}, {value: "Grey", text: "#B6B7B8"}, {value: "Red", text: "#F77071"}, {value: "Blue", text: "#87A8FA"}, {value: "Yellow", text: "#FBFA76"}, {value: "Green", text: "#76D08C"}, {value: "Brown", text: "#A28D76"}, {value: "Orange", text: "#F8B573"},{value: "Purple", text: "#A575B7"},{value: "Pink", text: "#F4B9F5"},{value: "Neutral", text: "#F3ECCE"},{value: "Clear", text: "url('../assets/img/ui/clear.jpg') no-repeat center center;"},{value: "Metallic", text: "url('../assets/img/ui/metallic.jpg') no-repeat center center;"},{value: "Pattern", text: "url('../assets/img/ui/pattern.jpg') no-repeat center center;"},{value: "Multicolour", text: "url('../assets/img/ui/reflective.jpg') no-repeat center center;"}]
        each val in filterColourOptions
          .col-xs-3(ng-show="ifColourAvailable('#{val.value}')")
            label.filter-button.colour(style="background: #{val.text}" ng-class="ifColourActive('#{val.value}')")
              input(type='checkbox' value="#{val.value}" ng-checked="colourIncludes.indexOf('#{val.value}') != -1" ng-click="includeColour('#{val.value}')")
#order.row.col-xs-12
  form
    - var filterOrderOptions = [{value: "lastBought", text: "Last bought"}, {value: "lovesCount", text: "Most loved"}, {value: "priceHigh", text: "Price high"}, {value: "priceLow", text: "Price low"} ]
      each val in filterOrderOptions
        .col-xs-6
          label.filter-button.order(ng-class="ifOrderActive('#{val.value}')")
            input(type='radio' value="#{val.value}" ng-checked="orderSet == #{val.value}" ng-click="setOrder('#{val.value}')")
            | #{val.text}