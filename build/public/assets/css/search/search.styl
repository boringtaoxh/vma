#search
  font-family 'PT Sans' 'Source San Pro'
  padding 20px
  .title
    font-size 13px
    font-style italic
    font-weight 300
    margin-top 60px
  input
    color #908f8f
    font 700 100px/1.2 'PT Sans'
    height 120px
    position absolute
    text-transform uppercase
    width 98%
    border none
  .results
    width 100%
    margin-top 150px
    .section
      border-bottom 1px solid #e4e4e4
      margin-bottom 20px
      padding-bottom 10px
      h2
        font-size 14px
        text-transform uppercase
        font-weight 700
        margin 0
      h4
        margin 0
    img
      margin-bottom 20px
    .section-results
      li
        margin-bottom 20px
        display block
        overflow hidden
        a
          color black
          font-size 14px
        .cover
          float left
          margin-right 20px
        .brand,.product
          a
            font-weight 700
        .price
          font-size 14px
          margin-top 20px
          font-weight 700
          text-align right
          padding-right 8.3%
        .btn
          padding 2px 20px
          margin-top 15px
          text-transform uppercase
          font-weight 700
          &.purchase
            background black
            color white
    .more
      a
        color #000
        font-size 14px
        text-transform uppercase
        font-weight 700
        text-decoration underline
        color #c8c8c8
    .info
      padding-left 15px 
      div
        line-height 1.7
        a
          color black
          font-size 12px
          font-weight 100
      .product
        font 700 1em/1.7 'PT Sans'
      .designer
        font-size 12px
      .price
        font-size 12px
  .no-result
    color #908f8f
    h2
      font-size 24px
      margin-bottom 10px
      text-transform capitalize
    p
      font-style italic