#product
  padding 80px
  position relative
  .product-cover
    img
      width 100%
  .details
    color #000
    padding 30px
    font 700 1em/1.2 'PT Sans'
    line-height 1.6
    z-index 10
    background rgba(250, 250, 250, 1)
    a
      color black
      font 700 1em/1.2 'PT Sans'
      text-decoration underline
    .name
      font-size 30px
      font-weight 700
      margin-bottom 15px
    .brand
      font-weight 100
      margin-bottom 15px
    .price
      font-size 20px
    .info
      margin-top 40px
      .header
        border-bottom 1px solid #E5E7E5
        padding-bottom 15px
        margin-bottom 15px
      .category,.color,.material
        margin-bottom 20px
        font-weight 100
    .product-btns
      margin-top 60px
    .btn
      background-color rgb(179, 179, 179)
      border-radius 3px
      clear both
      padding 10px 10px
      color rgb(255, 255, 255)
      display block
      font-size 0.75em
      font-weight 700
      letter-spacing .5px
      line-height 1.38
      text-align center
      border none
      width 90%
      text-decoration none!important
      &:hover
        transition all 0.6s ease
        background-color black
      &.purchase,
      &.reserve
        background-color black
      img
        margin-top 8px
        margin-left 10px
        height 20px
        opacity 0.3
        cursor pointer
        &:hover
          transition all 0.6s ease
          opacity 1
  .love-count
    position absolute
    z-index 11
    width 30px
    font-size 12px
    height 25px
    bottom 30px
    left 23px
    font-family 'PT Sans'
    padding 1px
    color #A3A3A3
    background url('/assets/img/ui/lovely_icon.png') center center no-repeat
    background-size cover
