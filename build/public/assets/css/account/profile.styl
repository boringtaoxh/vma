#accountProfile
  font-family "source sans pro" "PT Sans"
  padding 50px
  margin-top 120px
  padding-top 0
  a
    color black
    cursor pointer
  p
    font-size 14px
  a
    font-size 14px
  b
    font-size 14px
  .profile-cell
    margin-bottom 20px
    .profile-header
      padding-bottom 10px
      margin-bottom 20px
      border-bottom 1px solid #d3d3d3
      float left
      h4
        font-family "PT Sans"
        font-weight 700
        font-size 18px
        width 80%
        float left
      button
        font-size 14px
        padding 5px 10px
        border-radius 2px
        background-color rgb(230, 230, 230)
        border none
        float right
    .profile-item
      strong
        margin-right 5px
  #profile
    img
      width 20px
      margin-left 15px
  #giftVoucher
    .refresh-btn
      margin-left 80px
      background url('/assets/images/refresh-btn.png') left center no-repeat
      border none
      padding-left 20px
    input[type="input"]
      width 40%
      height 40px
      margin-right 20px
      background-color #f7f7f7
      border none
    input[type="submit"]
      font-size 18px
      height 40px
      width 80px
      font-family: "PT Sans";
      color white
      font-weight 700
      border none
      border-radius 2px
      background-image -moz-linear-gradient( 90deg, rgb(78,78,78) 0%, rgb(124,124,124) 100%)
      background-image -webkit-linear-gradient( 90deg, rgb(78,78,78) 0%, rgb(124,124,124) 100%)
      background-image -ms-linear-gradient( 90deg, rgb(78,78,78) 0%, rgb(124,124,124) 100%)
      box-shadow 0.157px 2.996px 0px 0px rgba(87, 87, 87, 0.294)  
#edit
  position absolute
  top 140px
  right 50px
  font-family "PT Sans"
  font-weight 700
  button
    background #E9EBE9
    box-shadow 0.157px 2.996px 0px 0px rgba(87, 87, 87, 0.294)
#edit-form
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  z-index 999
  background rgba(230, 230, 230, .9)
  overflow scroll
  form
    position absolute
    width 70%
    height auto
    top 0
    left 0
    right 0
    margin 60px auto 0 auto
    background rgba(50, 50, 50, .9)
    padding 20px
    padding-top 10px
    color white
    font-family "PT Sans"
    border-radius 5px
    h5
      margin-bottom 10px
      font-weight 700
      text-transform uppercase
    .edit-title
      border-bottom 1px solid #8E8E8E
      margin-bottom 15px
    .edit-submit
      margin-top 10px
      button
        color white
        font-weight 700
        width 100px
        margin-right 10px
        background #919191
        box-shadow 0.157px 2.996px 0px 0px rgba(87, 87, 87, 0.294)
        &[type='submit']
          background white
          color black
    .edit-subscription
      margin-top 15px
    input[type='text']
      margin-bottom 10px
      border-radius 5px
      background transparent
      border 1px solid #8E8E8E
      color #BBBBBB
      padding 5px 10px
    input[type='radio']
      margin-right 15px
    input[type='checkbox']
      margin-right 15px
      float left
    label
      font-weight 100
      input
        margin-right 15px