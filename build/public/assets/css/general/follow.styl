#follow
  position fixed
  height 100%
  width 100%
  background-color rgba(255, 255, 255, 0.85)
  z-index 131
  top 0
  left 0
  a
    color black
    &:hover
      color grey
      text-decoration none
  .close
    position absolute
    top 20px
    right 20px
    opacity .6
  .wrapper
    width 300px
    height 500px
    position absolute
    margin auto
    top 0
    bottom 0
    left 0
    right 0
    font-family 'PT Sans'
    font-size 24px
    color #3b3b3b
    font-weight 700
    text-align center
    h4
      margin-bottom 30px
    .subscribe-wrapper
      border-bottom 1px solid grey
      padding-bottom 10px
      margin-bottom 10px
      input[type="email"]
        border 2px solid #9f9f9f
        box-shadow none
        padding 8px 15px
        border-radius 5px
        background-color transparent
        font-family 'PT Sans'
        font-size 18px
        margin-bottom 20px
        font-weight 700
        &:focus,
        &:invalid
          color black
          box-shadow none
          -webkit-box-shadow none
          outline none
      .subscribe
        background-color rgba(175, 175, 175, .2)
        border none
        padding 8px 15px
        margin-bottom 20px
        margin-left 20px
        font-size 18px
        font-weight 700
        color #3b3b3b
        &:focus,
        &:invalid
          color black
          border none
          box-shadow none
          -webkit-box-shadow none
          outline none
        &:hover
          background-color rgba(175, 175, 175, .5)
    .title
      text-transform uppercase
      font-size 18px
      font-weight 700
      padding-top 10px
      border-top 1px solid grey
      margin-top 10px
    .row
      margin 0
      .social_icon
        opacity 0.5
        padding 15px
        cursor pointer
        &#weixin
          opacity .5
        &:hover
          opacity 1
          transition all 0.2s ease-in-out