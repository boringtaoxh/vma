#explore(ng-controller='exploreCtrl')
  #filters.col-xs-3(filter-products)
    include filter
  #filterProducts.col-xs-9
    .preload(ng-hide='ready')
      img(src='/assets/img/ui/spinner.gif')
      h4 Please give us some time to collect lovely things...
    #products(ng-show='ready' ng-controller='productsCtrl')
      ul(masonry)
        li.masonry-brick.col-xs-6.col-md-6.col-lg-4.product(list-products ng-repeat='product in relateProducts | orderBy: order | colourFilter: this')
