#luckyProducts
  width calc(100% - 300px)
  float right
  padding-bottom 40px
  background-color #d1f1db
  li
    background black
    &:hover .product-cover
      transition all 0.5s ease
      opacity 0.7
    &:hover .tag
      transition all 0.3s ease
      opacity 1
    .product-cover
      width 100%
      opacity 1
    .tag
      opacity 0
      position absolute
      right 0
      bottom 0
      height auto
      width 100%
      padding-left 15px
      padding-right 15px
      margin-bottom 15px
      font 700 1em/1.2 'PT Sans'
      .tag-info
        background-color rgb(255, 255, 255)
        border 1px solid #ebebeb
        border-radius 3px
        width 100%
        float right
        color #000
        padding 15px
        font 700 1em/1.2 'PT Sans'
        text-decoration underline
        line-height 1.6
        z-index 10
        a
          color black
          font 100 1em/1.2 'PT Sans'
        .remove
          background-color #cdcdcd
          width 20px
          height 20px
          border none
          font-size 10px
        .small-button
          background-color rgb(179, 179, 179)
          border-radius 3px
          clear both
          color rgb(255, 255, 255)
          display block
          font-size 0.75em
          font-weight 700
          letter-spacing .5px
          line-height 1.38
          margin 10px 0 0 0
          text-align center
          border none
          width 90px
          &:hover
            transition all 0.6s ease
            background-color black
        img
          margin-top 8px
          margin-left 10px
          height 20px
          opacity 0.3
          cursor pointer
          &:hover
            transition all 0.6s ease
            opacity 1
        .shadow
          width 60%
          margin-top -20px
