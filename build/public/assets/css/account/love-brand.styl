#brands
  li
    position relative
    box-sizing border-box
    &:hover .product-cover
      transition all 0.5s ease
      opacity 0.8
    &:hover 
      .product-details #followBrand
        transition all 0.3s ease
        opacity 1
      .product-details .brand
        transition all 0.3s ease
        opacity 0
    .product-cover
      width 100%
      opacity 1
      img
        width 100%
    .product-details
      position absolute
      top 0
      left 0
      height 100%
      width 100%
      color #000
      padding 15px
      font 700 1em/1.2 'PT Sans'
      line-height 1.6
      z-index 10
      box-sizing border-box
      a
        color black
        font 700 1em/1.2 'PT Sans'
      #followBrand
        opacity 0
        font-size 10px
        position absolute
        bottom 20px
        width calc(100% - 30px)
        .btn
          background-color rgb(255, 255, 255)
          border-radius 3px
          clear both
          padding 3px 10px
          color black
          display block
          font-size 14px
          font-weight 100
          letter-spacing .5px
          line-height 1.38
          text-align center
          width 100%
          border none
          text-decoration none!important
          &:hover
            transition all 0.6s ease
            background-color black
            color white
      .brand
        opacity 1
        font-weight 100
        font-size 14px
        border-radius 3px
        position absolute
        bottom 20px
        width calc(100% - 30px)
        padding 3px 10px
        background-color rgb(255, 255, 255)
        text-align center
        letter-spacing .5px