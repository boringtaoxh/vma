div(ng-controller='productsCtrl')
  preload
    #signin(ng-show='ready' ng-cloak)
      #signin-sidebar.col-xs-3
        #login(ng-controller='authCtrl')
          .heading LOG IN
          .form
            form(name='userLogin' ng-submit='login()' novalidate='' ng-hide='currentUser')    
              input.email.col-xs-12(type='email' name='email' placeholder='Email' ng-model='user.email' ng-required='true')
              p.error.validation(ng-show='userLogin.email.$invalid && userLogin.email.$touched') Must be a valid email
              input.password.col-xs-12(type='password' name='password' placeholder='Password' ng-model='user.password' ng-required='true')   
              p.error.validation(ng-show='userLogin.password.$invalid && userLogin.password.$touched') Password is required 
              button.submit.btn(type='submit' ng-disabled='userLogin.$invalid') Go
        #register(ng-controller='authCtrl')
          .heading JOIN THE COMMUNITY
          .form
            form(name='userRegister' ng-submit='register()' novalidate='')
              input.col-xs-6(type='text' name='firstname' placeholder='First Name' ng-model='user.firstname' ng-required='true')
              p.error.validation(ng-show='userRegister.firstname.$invalid && userRegister.firstname.$touched') First Name is required  
              input.col-xs-6(type='text' name='lastname' placeholder='Last Name' ng-model='user.lastname' ng-required='true')  
              p.error.validation(ng-show='userRegister.lastname.$invalid && userRegister.lastname.$touched') Last Name is required
              input.email.col-xs-12(type='email' name='email' placeholder='Email' ng-model='user.email' ng-required='true')
              p.error.validation(ng-show='userRegister.email.$invalid && userRegister.email.$touched') Must be a valid email
              input.password.col-xs-12(type='password' name='password' placeholder='Password' ng-model='user.password' ng-required='true')   
              p.error.validation(ng-show='userRegister.password.$invalid && userRegister.password.$touched') Password is required 
              .col-xs-6
                label
                  input(type='radio' name='fashion' ng-model='user.fashion' ng-required='true' value='x' )
                  | Man's fashion
              .col-xs-6
                label
                  input(type='radio' name='fashion' ng-model='user.fashion' ng-required='true' value='y')
                  | Woman's fashion
              .newsletter.col-xs-12
                input.pull-left(type='checkbox' name='newsletter' ng-model='user.newsletter' value='true' )
                label Receive our newsletter and recommendation?
              .vip.col-xs-12
                button.btn.submit(type='submit' ng-disabled='userRegister.$invalid') Join
              .register.col-xs-12.text-left
                a(href="mailto:info@alt-001.com?subject=I%20want%20to%20join%20ALT%20as%20designer") JOIN IN AS DESIGNER
      .col-xs-9.pull-right(ng-controller='productsCtrl')
        #products
          wrap-big-products(products='randomProducts')

